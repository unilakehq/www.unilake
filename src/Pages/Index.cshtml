<script>
    // Tab switching functionality
    const tabButtons = document.querySelectorAll('.tab-button')
    const tabContents = document.querySelectorAll('.tab-content')

    tabButtons.forEach((button) => {
        button.addEventListener('click', () => {
            const tabId = button.getAttribute('data-tab')

            tabButtons.forEach((btn) =>
                btn.classList.remove('bg-backgroundFaded', 'hover:bg-backgroundFaded')
            )
            tabContents.forEach((content) => content.classList.add('hidden'))

            button.classList.add('bg-backgroundFaded', 'hover:bg-backgroundFaded')
            document.getElementById(`${tabId}-content`).classList.remove('hidden')

            // Open first accordion item in the newly selected tab
            const firstAccordionTrigger = document.querySelector(
                `#${tabId}-content .accordion-trigger`
            )
            if (firstAccordionTrigger) {
                openAccordion(firstAccordionTrigger)
            }
        })
    })

    // Accordion functionality
    const accordionTriggers = document.querySelectorAll('.accordion-trigger')

    function closeAllAccordions() {
        accordionTriggers.forEach((trigger) => {
            const content = trigger.nextElementSibling
            const arrow = trigger.querySelector('svg')
            content.classList.add('hidden')
            arrow.classList.remove('rotate-180')
        })
    }

    function openAccordion(trigger) {
        const content = trigger.nextElementSibling
        const arrow = trigger.querySelector('svg')
        content.classList.remove('hidden')
        arrow.classList.add('rotate-180')
        updateImage(trigger)
    }

    accordionTriggers.forEach((trigger) => {
        trigger.addEventListener('click', () => {
            const content = trigger.nextElementSibling
            const arrow = trigger.querySelector('svg')
            const isOpen = !content.classList.contains('hidden')

            closeAllAccordions()

            if (!isOpen) {
                openAccordion(trigger)
            }
        })
    })

    // Image update functionality
    const images = {
        connect: {
            Integrate: './img/landing/app-result.png',
            Metalake: './img/landing/hero.png',
            'Quality Controls': './img/landing/app-result.png',
            'Version Control': './img/landing/hero.png',
        },
        discover: {
            'Data Exploration': './img/landing/app-result.png',
            'Pattern Recognition': './img/landing/hero.png',
            'Anomaly Detection': './img/landing/app-result.png',
        },
        productize: {
            'Data Packaging': './img/landing/app-result.png',
            'API Generation': './img/landing/hero.png',
            Monetization: './img/landing/app-result.png',
        },
        govern: {
            'Data Governance': './img/landing/app-result.png',
            'Compliance Management': './img/landing/hero.png',
            'Access Control': './img/landing/app-result.png',
        },
    }

    function updateImage(trigger) {
        const tabId = trigger.closest('.tab-content').id.replace('-content', '')
        const accordionTitle = trigger.querySelector('span').textContent
        const imageElement =
            document.getElementById(`${tabId}-image`) ||
            document.getElementById('feature-image')

        const smallImageElement =
            document.getElementById(`${tabId}-image-small`) ||
            document.getElementById('feature-image-small')

        if (images[tabId] && images[tabId][accordionTitle]) {
            imageElement.style.opacity = '0'
            smallImageElement.style.opacity = '0'
            setTimeout(() => {
                imageElement.src = images[tabId][accordionTitle]
                imageElement.style.opacity = '1'

                smallImageElement.src = images[tabId][accordionTitle]
                smallImageElement.style.opacity = '1'
            }, 100)
        }
    }

    // Open first tab and first accordion by default
    tabButtons[0].click()
</script>